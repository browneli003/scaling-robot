    <div class="col-12 col-md-4 card card-body">
        <a href="/dashboard/create/"><button id="create-post language-buttons" class="btn">create post</button></a>
        
        <h2 class="subtitle">dashboard: your posts</h2><hr>
{{#if posts.length}}
    </div>

    {{#each posts as |post|}}
        {{> post-info post}}
        
            <a href="/dashboard/edit/{{post.id}}"><button class="button mb-5 ml-5 is-warning">edit post</button></a>
        </div>
    {{/each}}

{{else}}
<h6 class="list-group">you do not currently have any posts</h6>

{{/if}}
